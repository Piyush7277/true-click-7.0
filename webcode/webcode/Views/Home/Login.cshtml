@model webcode.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="login-wrapper-in">
    <div class="login-form-area register-page">
        <div class="login-form">
            @using (Html.BeginForm())
            {
                <div class="form-main">
                    <div class="login-form-title">SignIn</div>
                    <div class="login-intup">
                        <span><i class="fa fa-user"></i>User name</span>
                        <input type="text" asp-for="UserName"  class="login-inp">
                    </div>
                    <div class="login-intup">
                        <span><i class="fa fa-lock"></i>Password</span>
                        <input type="password" asp-for="Password" class="login-inp">
                    </div>
                    <div class="login-btn-login">
                        <div style="color:#cb0f0f" asp-validation-summary="All"></div>
                        @{
                            string err = "";
                            if (ViewData["_ErrorMessage"] != null)
                            {
                                err = ViewData["_ErrorMessage"].ToString();
                            }
                        }
                        <label id="lblerr" style="color:#cb0f0f">@err</label><br />
                        <button class="btn-login" id="btnLogin">SignIn</button>
                    </div>
                </div>
                <div class="other-login">Don't have an account? <a asp-action="registration" asp-controller="home">Sign up</a></div>
                <div class="other-login">Don't remember the password? <a asp-action="forgetpassword" asp-controller="home">Forgot Password</a></div>
            }
        </div>
    </div>


    <div class="login-logo-area register-page">
        <div class="login-logo-inner">
            <div class="login-logo">
                <a href="~/">
                    <img src="~/assets/images/logo.svg" alt="logo">
                </a>
            </div>
            <div class="logo-bottom-content">
                <p><span>Engaging more, Refreshing result</span></p>
            </div>
        </div>
    </div>
</div>
